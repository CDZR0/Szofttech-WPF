<UserControl x:Class="Szofttech_WPF.View.Game.InfoPanelGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:Szofttech_WPF.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <UserControl.Resources>
        <viewmodel:InfoPanelGUIViewModel x:Key="vmVisibility" />
    </UserControl.Resources>
    <Grid x:Name="grid">
        <Image Source="../../Resources/arrow_left.png" Visibility="{Binding Source={StaticResource vmVisibility}, Path=IsVisible, UpdateSourceTrigger=PropertyChanged}"/>
        <Image Source="../../Resources/arrow_right.png" Visibility="{Binding Source={StaticResource vmVisibility}, Path=IsNotVisible, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>