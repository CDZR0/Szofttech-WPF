<UserControl x:Class="Szofttech_WPF.View.SettingsGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Szofttech_WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#3269a8"/>
        </Grid.Background>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="lblPort" FontSize="20" Content="Port:"/>
            <TextBox x:Name="txtBlckPort" Margin="50, 0, 0, 0" Width="150" Height="25" KeyUp="txtBlckPort_KeyUp"/>
        </Grid>
        <Label x:Name="lblSaved" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
               Margin="0, 0, 0, 50" Content="Settings saved..." Visibility="Hidden"/>

    </Grid>
</UserControl>
